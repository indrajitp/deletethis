<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="Global Token">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Remove-Pathsuffix</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <Name>Set-Security-Headers</Name>
            </Step>
        </Response>
    </PostFlow>
    <Flows/>
    <HTTPTargetConnection>
        <Properties/>
        <LoadBalancer>
            <Server name="tokenization-cache"/>
        </LoadBalancer>
        <Path>/tokenize/globalToken</Path>
    </HTTPTargetConnection>
</TargetEndpoint>